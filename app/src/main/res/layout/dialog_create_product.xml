<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp">


            <TextView
                android:fontFamily="@font/poppins_semi_bold"
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Create a New Product"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginVertical="5dp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="PRODUCT NAME"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg"
                android:gravity="start"
                android:padding="5dp"
                android:textSize="12sp"
                android:hint="ENTER PRODUCT NAME"
                android:textColorHint="#a1a0a5"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="No Of Ctn"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_no_ctn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg"
                android:gravity="start"
                android:padding="5dp"
                android:textSize="12sp"
                android:maxLength="10"
                android:hint="0"
                android:textColorHint="#a1a0a5"
                android:fontFamily="@font/poppins_regular"
                android:inputType="phone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Order Ctn"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_order_ctn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg"
                android:gravity="start"
                android:padding="5dp"
                android:textSize="12sp"
                android:maxLength="10"
                android:hint="0"
                android:textColorHint="#a1a0a5"
                android:fontFamily="@font/poppins_regular"
                android:inputType="phone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Pcs/Weight"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <Spinner
                    android:paddingVertical="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/unitSpinner"
                    android:layout_gravity="start"
                    android:gravity="start"/>

            </RelativeLayout>


            <RelativeLayout
                android:paddingHorizontal="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_save_product"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button_bg"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:text="SAVE"
                    android:textColor="@android:color/white"
                    android:textSize="12dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtCancel"
                    android:background="@drawable/et_bg"
                    android:layout_toRightOf="@id/txt_save_product"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="CANCEL"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:hint="DD-MM-YYYY"
                    android:fontFamily="@font/poppins_regular"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>