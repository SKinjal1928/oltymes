<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingVertical="5dp"
    android:background="@drawable/bottom_dialog_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <LinearLayout
        android:paddingHorizontal="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="Pressure Car Wash"
            android:src="@drawable/ic_estimate" />
        <TextView
            android:textStyle="bold"
            android:textColor="#174765"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost Master"/></LinearLayout>
    <LinearLayout
        android:paddingHorizontal="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="Pressure Car Wash"
            android:src="@drawable/ic_estimate" />
        <TextView
            android:textStyle="bold"
            android:textColor="#174765"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Master"/></LinearLayout>

</LinearLayout>