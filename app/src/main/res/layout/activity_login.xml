    <LinearLayout
        android:paddingVertical="10dp"
        android:background="@drawable/btn_bg"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/oltymes_logo"
            />
        <TextView
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAlignment="center" />
        <TextView
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your email and password to login"
            android:textAlignment="center" />
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt_semi_title"
            android:layout_marginHorizontal="15dp"
            android:textSize="14sp"
            android:id="@+id/et_username"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:textColorHint="#a1a0a5"
            android:padding="10dp"
            android:background="@drawable/et_bg"
            android:fontFamily="@font/poppins_regular"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_password"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/et_username"
            android:gravity="start|center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"
            android:textColorHint="#a1a0a5"
            android:background="@drawable/et_bg"
            android:padding="10dp"
            android:fontFamily="@font/poppins_regular"
            />

        <TextView
            android:layout_marginHorizontal="15dp"
            android:id="@+id/txt_log_in"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/txt_forget_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:text="Log In"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="normal"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>
