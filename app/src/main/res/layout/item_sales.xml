<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:orientation="vertical"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_grey_border"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_marginStart="0.6dp"
                    android:layout_marginVertical="1.5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_line_pending"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:src="@drawable/clock"
                                android:tint="@color/black" />

                            <TextView
                                android:id="@+id/itemTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/img_logo"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:gravity="center"
                                android:text="Pending"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <View
                            android:layout_marginVertical="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="Product"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@+id/img_logo"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_semi_bold"
                                        android:gravity="center"
                                        android:text="100"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:paddingHorizontal="5dp"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="CTN"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@+id/img_logo"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_semi_bold"
                                        android:gravity="center"
                                        android:text="28"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="CBM"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@+id/img_logo"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_semi_bold"
                                        android:gravity="center"
                                        android:text="35.45"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />




                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@+id/img_logo"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="Gross Weight"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@+id/img_logo"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_semi_bold"
                                        android:gravity="center"
                                        android:text="1000200"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@+id/img_logo"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="Invoice Value"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@+id/img_logo"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_semi_bold"
                                        android:gravity="center"
                                        android:text="28"
                                        android:textColor="@color/black"
                                        android:textSize="10sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>