<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:visibility="gone"
        android:id="@+id/tab_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/tab_inbox"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/icon_inbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/text_inbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/tab_process"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/icon_finance"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/process" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/text_finance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Process"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/tab_complete"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/icon_invoice"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/text_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Repeat this block for other tabs like Promotions, Social, etc. -->

        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Top Tab Bar -->
        <LinearLayout
            android:id="@+id/tabBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#EEEEEE">

            <LinearLayout
                android:id="@+id/tabInbox1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iconInbox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/textInbox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inbox"
                    android:textSize="12sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabPromo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iconPromo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/process" />

                <TextView
                    android:id="@+id/textPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promos"
                    android:textSize="12sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Smooth Content Area -->
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out">

            <!-- Inbox Content -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ“¥ Inbox Content"
                android:textSize="22sp"/>

            <!-- Promo Content -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ’¬ Promo Content"
                android:textSize="22sp"/>
        </ViewFlipper>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/tabContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </HorizontalScrollView>

        <!-- Content Area -->
        <FrameLayout
            android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- SmoothBottomBar -->
    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:menu="@menu/bottom_nav_menu"
        app:backgroundColor="@color/purple_200"
         />
